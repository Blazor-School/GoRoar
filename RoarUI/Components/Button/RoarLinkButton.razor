@namespace RoarUI.Components

<RoarDependency ComponentName="button" />
<wa-button href="@Href" target="@Target" variant="@Variant" appearance="@Appearance" size="@Size" pill="@Pill" type="@Type" @attributes="AdditionalAttributes">@ChildContent</wa-button>

@code {
    [Parameter]
    public Variant Variant { get; set; }

    [Parameter]
    public Appearance Appearance { get; set; }

    [Parameter]
    public Size Size { get; set; }

    [Parameter]
    public bool Pill { get; set; }

    [Parameter]
    public ButtonType Type { get; set; }

    [Parameter]
    [EditorRequired]
    public string Href { get; set; } = "";

    [Parameter]
    public LinkTarget Target { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }
}
