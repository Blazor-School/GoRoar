<h3>Playing Animations on Demand</h3>
<RoarAnimation AnimationName="AnimationName.RubberBand" Iterations="1" Play="ShouldPlayAnimation">
    <RoarButton Variant="Variant.Brand" @onclick="PlayAnimation">Click me</RoarButton>
</RoarAnimation>

<style>
    .box {
        display: inline-block;
        width: 100px;
        height: 100px;
        background-color: var(--wa-color-brand-fill-loud);
        margin: 1.5rem;
    }
</style>

@code {
    public string SelectedAnimationName { get; set; } = "bounce";
    public string SelectedEasing { get; set; } = "linear";
    public double PlaybackRate { get; set; } = 1;
    public bool ShouldPlayAnimation { get; set; } = false;
    public Guid PlaySignal { get; set; } = Guid.NewGuid();

    public void PlayAnimation()
    {
        ShouldPlayAnimation = true;
    }
}
