@page "/animation-sample"

<h3>Basic</h3>
<div class="animation-overview">
    <RoarAnimation AnimationName="AnimationName.Bounce" Duration="2000"><div class="box"></div></RoarAnimation>
    <RoarAnimation AnimationName="AnimationName.Jello" Duration="2000"><div class="box"></div></RoarAnimation>
    <RoarAnimation AnimationName="AnimationName.HeartBeat" Duration="2000"><div class="box"></div></RoarAnimation>
    <RoarAnimation AnimationName="AnimationName.Flip" Duration="2000"><div class="box"></div></RoarAnimation>
</div>

